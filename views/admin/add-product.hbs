<div 
  class="row w-100% d-flex justify-content-center align-item-center m-0 bg-light"
  style="padding-top: 8rem;height: 100vh;background-color: #4158D0;
background-image: linear-gradient(43deg, #4158D0 0%, #C850C0 46%, #FFCC70 100%);
"
>
   <div
    class="col-12 col-sm-5 col-lg-4 m-0 border  bg-light p-3"
    style="height: 70vh; border-radius:40px"
  >
    <h3 class="text-center text-primary">Add-User</h3>
    <form novalidate method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label text-primary">First
          Name</label>
        <input
          type="text"
          class="form-control"
          name="name"
          id="fname"
          aria-describedby="emailHelp"
          required
        />
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label text-primary">Last
          Name</label>
        <input
          type="test"
          class="form-control"
          name="lname"
          id="Lname"
          aria-describedby="emailHelp"
          required
        />

      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label text-primary">Email
          address</label>
        <input
          type="email"
          class="form-control"
          name="email"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          required
        />

      </div>
      <div class="mb-3">
        <label
          for="exampleInputPassword1 "
          class="form-label text-primary"
        >Password</label>
        <input
          type="password"
          class="form-control"
          name="pass"
          id="exampleInputPassword1"
          required
        />
      </div>
      
      <div
        class="d-flex justify-content-center align-item-center w-100 text-primary"
      >
        <button
          type="submit"
          class="btn btn-outline-primary px-5 mt-1 text-primary"
          style="padding-top=20px"
        >Submit</button>

      </div>
      <div class="d-flex justify-content-center align-item-center mt-5">
        <p style="color: rgb(231, 18, 18);">{{userexist}}</p>
      </div>
    </form>
  </div>
</div>
<script>
  const form = document.querySelector('form');
  form.addEventListener('submit', e => {
    if (!form.checkValidity()) {
      e.preventDefault();
    }
    form.classList.add('was-validated');
  });
</script>
